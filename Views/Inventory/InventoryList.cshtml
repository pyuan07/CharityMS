@model List<CharityMS.ViewModels.InventoryVM>
@{
    ViewData["Title"] = "InventoryList";
}

<h1>Inventory List</h1>

@if (ViewBag.msg != "")
{
    <script>
        alert("@ViewBag.msg");
    </script>
}

<a class="btn btn-primary" asp-action="InsertInventory">Add Record</a>

<div class="container">
    <br />
    <br />
    <form method="post" asp-action="InventoryList">
        <div class="row">
            <div class="col-md-1">
                <label>Item Name: </label>
            </div>
            <div class="col-md-2">
                <input type="text" name="itemName" />
            </div>
            <div class="col-md-1">
                <label>Category: </label>
            </div>
            <div class="col-md-2">
                <select name="category">
                    <option value="">Select</option>
                    <option value="food">Food</option>
                    <option value="breverage">Breverage</option>
                    <option value="electronics">Electronics</option>
                    <option value="clothe">Clothe</option>
                </select>
            </div>

            <div class="col-md-1">
                <label>Status: </label>
            </div>
            <div class="col-md-2">
                <select name="Status">
                    <option value="">Select</option>
                    <option value="Available">Available</option>
                    <option value="Not Available">Not Available</option>
                    <option value="Donated">Donated</option>
                </select>
            </div>
            <div class="col-md-1">
                <button type="submit" name="submit" class=" btn btn-success">Search</button>
            </div>
           
        </div>
        
    </form>

    @if (ViewBag.msg == "Data was found!")
    {
        <hr />
        <br />
        <p>Number of the transaction found in this search result : @Model.Count</p>
        <div class="row">
            @foreach (var item in Model)
            {
            <div style="display:inline-block; background-color: lightblue; text-align:left; margin:10px 10px 10px 10px; padding:12px 12px 12px 12px" class="col-md-4">
                <div class="row">
                    <div class="col-md-3">
                        <label>Donor_Name:</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" asp-for="@item.DonorID" value="@item.DonorID" disabled />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <label>Category:</label>
                    </div>
                    <div class="col-md-9">
                        <select asp-for="@item.Category" asp-items="@item.Categories" class="form-control" disabled></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label>Item_Name:</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" asp-for="@item.Name" value="@item.Name" disabled />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label>Quantity:</label>
                    </div>
                    <div class="col-md-9">
                        <input type="number" asp-for="@item.Quantity" value="@item.Quantity" disabled />
                    </div>
                </div>


                @if (!String.IsNullOrEmpty(@item.ExpiredDate))
                {
                    <div class="row">
                        <div class="col-md-3">
                            <label>Expired Date:</label>
                        </div>
                        <div class="col-md-9">
                            <input type="date" asp-for="@item.ExpiredDate" disabled />
                        </div>
                    </div>
                }

                @if (@item.ProductCondition != null)
                {
                    <div class="row">
                        <div class="col-md-3">
                            <label>Condition:</label>
                        </div>
                        <div class="col-md-9">
                            <select asp-for="@item.ProductCondition" asp-items="@item.Conditions" class="form-control" disabled></select>
                        </div>
                    </div>
                }

                @if (item.cloteSize != null)
                {
                    <div class="row">
                        <div class="col-md-2">
                            <label>Clothe Size:</label>
                        </div>
                        <div class="col-md-5">
                            <select asp-for="@item.cloteSize" asp-items="@item.clothSizes" class="form-control"></select>
                        </div>
                    </div>
                }

                @if (!String.IsNullOrEmpty(@item.Receiver))
                {
                    <div class="row">
                        <div class="col-md-3">
                            <label>Receiver:</label>
                        </div>
                        <div class="col-md-9">
                            <input type="text" asp-for="@item.Receiver" disabled />
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-md-3">
                        <label>Status:</label>
                    </div>
                    <div class="col-md-9">
                        <select asp-for="@item.Status" asp-items="@item.Statusddl" class="form-control" disabled></select>
                    </div>
                </div>
                <a asp-action="updateInventory" asp-controller="Inventory" asp-route-donorId="@item.DonorID" asp-route-inventoryId="@item.InventoryID" class="btn btn-info">Edit</a>
                &nbsp;
                <a asp-action="deleteInventory" asp-controller="Inventory" asp-route-donorId="@item.DonorID" asp-route-inventoryId="@item.InventoryID" class="btn btn-danger">Delete</a>
                &nbsp;
                @*<a asp-action="Donate" asp-controller="Inventory" asp-route-donorId="@item.DonorID" asp-route-inventoryId="@item.InventoryID" asp-route-receiverName="hello" class="btn btn-success">Donate</a>*@
                @if (item.Status != "Donated")
                {
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal_@item.InventoryID">
                        Donate
                    </button>

                    <div class="modal fade" id="createModal_@item.InventoryID" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="createModalLabel">Donations</h5>
                                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form id="donateForm">
                                    <div class="modal-body">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Receiver</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required id="receiver-txt_@item.InventoryID">
                                            </div>

                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        @*<a asp-action="Donate" asp-controller="Inventory" asp-route-donorId="@item.DonorID" asp-route-inventoryId="@item.InventoryID" asp-route-receiverName="hello" class="btn btn-success">Donate</a>*@
                                        <button type="button" class="btn btn-primary" onclick="onDonate('@item.DonorID','@item.InventoryID')">Donate</button>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
            }
        </div>
    }
</div>

@section Scripts{
    <script type="text/javascript">
        //trigger when loaded
        $(document).ready(function () {

            var errorMsg = "@ViewBag.ErrorMsg";

            if (errorMsg)
                Swal.fire({
                    icon: 'error',
                    title: 'Opps...',
                    text: errorMsg
                })

            var successMsg = "@Html.Raw(TempData["successMsg"])";

            if (successMsg)
                Swal.fire({
                    icon: 'success',
                    title: 'Congratulations',
                    text: successMsg
                })

            var errorTempMsg = "@Html.Raw(TempData["errorMsg"])";

            if (errorTempMsg)
                Swal.fire({
                    icon: 'error',
                    title: 'Opps...',
                    text: errorTempMsg
                })

        })

        function onDonate(donor, inv) {
            location.href = '@Url.Action("Donate", "Inventory")' + '?donorId=' + donor + '&inventoryId=' + inv + '&receiverName=' + $('#receiver-txt_' + inv).val();
        }
    </script>
}