
@{
    ViewData["Title"] = "UpdateStatusProve";
}
<div class="container">
    <h1>Select image: </h1>
    <br />
    <form asp-action="UpdateStatusProve" asp-controller="PickUp" method="post"
          enctype="multipart/form-data">
        <input type="hidden" name="id" value="@ViewBag.id" />
        <label>Upload multiple images from here: </label>
        <input type="File" name="images" accept="image/*" multiple />
        <br />
        <br />
        <input type="submit" value="Upload File" />
    </form>
</div>

