@model CharityMS.ViewModels.DonationVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Donation</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            Tracking Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReceiverFullName):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReceiverFullName)
        </dd>
    </dl>

    <div class="row">
        <div class="col-sm-2">
            Donation Items
        </div>
        <div class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Item Name
                        </th>
                        <th>
                            Item Quantity
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Donations != null)
                    {
                        @foreach (var item in Model.Donations)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ItemName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reason):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StaffFullName):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StaffFullName)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>


    <div>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        //trigger when loaded
        $(document).ready(function () {

            var errorMsg = "@ViewBag.ErrorMsg";

            if (errorMsg)
                Swal.fire({
                    icon: 'error',
                    title: 'Opps...',
                    text: errorMsg
                })

            var successMsg = "@Html.Raw(TempData["successMsg"])";

            if (successMsg)
                Swal.fire({
                    icon: 'success',
                    title: 'Congratulations',
                    text: successMsg
                })

            var errorTempMsg = "@Html.Raw(TempData["errorMsg"])";

            if (errorTempMsg)
                Swal.fire({
                    icon: 'error',
                    title: 'Opps...',
                    text: errorTempMsg
                })

        })


    </script>
}
