@section Scripts {
    <script>
        //trigger when loaded
        $(document).ready(function () {
            var errorMsg = "@ViewBag.errorMsg";

            if (errorMsg)
                Swal.fire({
                    icon: 'error',
                    title: 'Opps...',
                    text: errorMsg
                })
        })

        $("#submit").click(function (e) {
            e.preventDefault();
            var formData = new FormData();

            formData.append("donation.Reason", $("#reason-textfield").val());
            formData.append("donation.ApplicantName", $("#applicant-textfield").val());

            let valid = false;

            $("input[name='ItemName']").each(function (i) {
                var ItemName = $(this).val();
                if (ItemName == "") {
                    valid = false;
                }

                formData.append("donation.Donations[" + i + "].ItemName", ItemName);
            });

            $("input[name='Quantity']").each(function (i) {
                var Quantity = $(this).val();
                if (Quantity < 1) {
                    valid = false;
                }
                formData.append("donation.Donations[" + i + "].Quantity", Quantity);
            });

            if (valid) {
                $("#invalid-item").hide();

                $.ajax({
                    method: 'post',
                    url: "/Donations/CreateRequest",
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        if (data.result == -1) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: data.message
                            })
                        }
                        else {
                            Swal.fire({
                                icon: 'success',
                                title: 'Congratulations',
                                text: data.message
                            }).then(function () {
                                location.href = '@Url.Action("Index", "Donations")';
                            });
                        }
                    }
                });
            }
            else {
                $("#invalid-item").show();
            }

        });

        $("#addItem").click(function () {
            $.ajax({
                url: this.href,
                cache: false,
                success: function (html) {
                    $("#editorRows").append(html);
                    $(".deleteRow").click(function () {
                        $(this).parents("div.editorRow:first").remove();
                        return false;
                    });
                }
            });
            return false;
        });


    </script>
}
